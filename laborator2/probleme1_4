void first(int gs[4])
{
	bool bol=true;
	while (bol == true)
	{
		if (gs[0] == 1)
		{
			int temp;
			cout << "citeste stare q0:";
			cin >> temp;
			if (temp == 0)
			{
				gs[1] = 1;
				gs[0] = 0;
			}

			if (temp == 1)
			{
				gs[0] = 0;
				gs[2] = 1;
			}
		}

		if (gs[1] == 1)
		{

			cout << "citeste stare q1:";
			int temp;
			cin >> temp;
			if (temp == 0)
			{
				gs[1] = 0;
				gs[3] = 1;
			}

			if (temp == 1)
			{
				gs[1] = 0;
				gs[0] = 1;
			}
		}

		if (gs[2] == 1)
		{
			int temp;
			cout << "citeste stare q2:";

			cin >> temp;
			if (temp == 0)
			{
				gs[2] = 0;
				gs[1] = 1;
			}

			if (temp == 1)
			{
				gs[2] = 0;
				gs[3] = 1;
			}
		}

		if (gs[3] == 1)
		{
			int temp;
			cout << "in stare q3 ";
			
				gs[3] = 0;
				bol=false;
				break;
			
		}
	}
}


void second()
{
	int gs[4] = { 1,0,0,0 };
	char temp;

	bool time = true;
	string cat = "cat";
	while (time)
	{


		if (gs[0] == 1)
		{
			cout << "in stare q0" << endl;
			cout << "citeste stare q0:";
			cin >> temp;
			if (temp == 'c')
			{

				gs[0] = 0;
				gs[1] = 1;
			}

		}

		if (gs[1] == 1)  // stare q1 ativa pe 1
		{
			cout << "in stare q1" << endl;
			cout << "citeste stare q1:" << endl;
			cin >> temp;
			if (temp == 'a')
			{
				gs[1] = 0;
				gs[2] = 1;

			}

			if (temp != 'c' && temp != 'a')
			{
				gs[1] = 0;
				gs[0] = 1;
			}

		}

		if (gs[2] == 1)  // q2 stare activa
		{
			cout << "in stare q2" << endl;
			cout << "citeste stare q2:" << endl;
			cin >> temp;
			if (temp == 't')
			{
				gs[2] = 0;
				gs[3] = 1;

			}

			if (temp == 'c')
			{
				gs[2] = 0;
				gs[1] = 1;
			}

			if (temp != 'c' && temp != 'a')
			{
				gs[0] = 1;
				gs[2] = 0;
			}
		}

		if (gs[3] == 1)   // q3 stare activa
		{
			char temp_1;


			cin >> temp_1;
			cat.append(string(1, temp_1));
			cout << cat;
			gs[0] = 0;
		}

	};
}



