					{
						for (int j = 0;j <5;j++)
						{
							if (duble3.at(i) == duble3.at(j))
							{
								counter++;
							}

							if (counter == 3)
							{
								counter = 0;
								duble.push_back(duble3);
							}
						}
					}

					duble.push_back(duble3);
