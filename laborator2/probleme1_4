	vector<string> third()
	{

		string temp = { 'a','b','c','d' };
		vector<string> duble;
		int counter = 0;
		for (char a : temp)

		{
			for (char b : temp)
			{

				for (char c : temp)
				{
					string duble3 = string(1, a) + string(1, b) + string(1, c);


